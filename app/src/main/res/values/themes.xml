<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaImage" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/behavior_background_color100</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/background_color100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/brown</item>
        <!-- Customize your theme here. -->
        <item name="myBgColor">@color/background_color100</item>
        <item name="myBottomBehaviorBgColor">@color/behavior_background_color100</item>
        <item name="myBrownColor">@color/brown</item>
        <item name="myOrangeColor">@color/orange</item>
        <item name="myPinkDarkColor">@color/pink_dark</item>
        <item name="colorOnBackground">?attr/myBgColor</item>
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearanceSmallComponent">@style/shapeSmallComponent</item>
        <item name="android:colorBackground">?attr/myBgColor</item>
    </style>

    <style name="Theme.NasaImage.Blue" >

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/behavior_background_color200</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/background_color200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/myBrownColor</item>
        <!-- Customize your theme here. -->

        <item name="myBgColor">@color/background_color200</item>
        <item name="myBottomBehaviorBgColor">@color/behavior_background_color200</item>
        <item name="myBrownColor">@color/grey</item>
        <item name="myOrangeColor">@color/blue_light</item>
        <item name="myPinkDarkColor">@color/red</item>


        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:colorBackground">?attr/myBgColor</item>

    </style>

</resources>